[Unit]
Description=SmartPanel Hub API
After=network-online.target homebridge.service
Wants=network-online.target

[Service]
Type=simple
User=bghype
Group=bghype
WorkingDirectory=/home/bghype/smartpanel
EnvironmentFile=/etc/smartpanel.env
ExecStart=/home/bghype/smartpanel/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8100 --workers 1 --log-level info
Restart=on-failure
RestartSec=5

# Memory guard â€” systemd will SIGTERM at MemoryMax
MemoryHigh=60M
MemoryMax=80M

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
